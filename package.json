{
  "name": "dday-api",
  "version": "0.9.0",
  "description": "",
  "engines": {
    "node": ">=24.0.0"
  },
  "packageManager": "yarn@1.22.22",
  "volta": {
    "node": "24.11.0",
    "yarn": "1.22.22"
  },
  "author": "Aesop",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "build:sls": "nest build && tsc --project tsconfig.build.json",
    "build:lambda:dev": "cross-env NODE_ENV=dev yarn build",
    "build:lambda:prod": "cross-env NODE_ENV=prod yarn build",
    "sls:offline": "yarn build:sls && env-cmd -f .env.local serverless offline",
    "deploy:dev": "yarn build:lambda:dev && env-cmd -f .env.dev serverless deploy --stage dev",
    "deploy:prod": "yarn build:lambda:prod && env-cmd -f .env.prod serverless deploy --stage prod",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:local": "yarn lint && env-cmd -f .env.local nest start --watch",
    "start:dev": "env-cmd -f .env.dev nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "env-cmd -f .env.prod node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "logs:dev": "serverless logs -f app --stage dev",
    "logs:prod": "serverless logs -f app --stage prod",
    "logs:dev:tail": "serverless logs -f app --stage dev -t",
    "logs:prod:tail": "serverless logs -f app --stage prod -t",
    "cron:invoke:dev": "env-cmd -f .env.dev -- serverless invoke -f notificationCron --stage dev",
    "cron:invoke:prod": "env-cmd -f .env.prod -- serverless invoke -f notificationCron --stage prod",
    "cron:logs:dev": "serverless logs -f notificationCron --stage dev",
    "cron:logs:prod": "serverless logs -f notificationCron --stage prod",
    "cron:logs:dev:tail": "serverless logs -f notificationCron --stage dev -t",
    "cron:logs:prod:tail": "serverless logs -f notificationCron --stage prod -t",
    "cron:test:local": "env-cmd -f .env.local node -e \"require('./dist/cron-handler').handler({}, {}).then(console.log).catch(console.error)\"",
    "milestone-cache:invoke:dev": "env-cmd -f .env.dev -- serverless invoke -f updateNextMilestoneCacheCron --stage dev",
    "milestone-cache:invoke:prod": "env-cmd -f .env.prod -- serverless invoke -f updateNextMilestoneCacheCron --stage prod",
    "milestone-cache:logs:dev": "serverless logs -f updateNextMilestoneCacheCron --stage dev",
    "milestone-cache:logs:prod": "serverless logs -f updateNextMilestoneCacheCron --stage prod",
    "milestone-cache:logs:dev:tail": "serverless logs -f updateNextMilestoneCacheCron --stage dev -t",
    "milestone-cache:logs:prod:tail": "serverless logs -f updateNextMilestoneCacheCron --stage prod -t",
    "milestone-cache:test:local": "env-cmd -f .env.local node -e \"require('./dist/milestone-cache-cron-handler').handler({}, {}).then(console.log).catch(console.error)\"",
    "enqueue:invoke:dev": "env-cmd -f .env.dev -- serverless invoke -f enqueueNotificationsCron --stage dev",
    "enqueue:invoke:prod": "env-cmd -f .env.prod -- serverless invoke -f enqueueNotificationsCron --stage prod",
    "enqueue:logs:dev": "serverless logs -f enqueueNotificationsCron --stage dev",
    "enqueue:logs:prod": "serverless logs -f enqueueNotificationsCron --stage prod",
    "enqueue:test:local": "env-cmd -f .env.local node -e \"require('./dist/enqueue-notifications-cron-handler').handler({}, {}).then(console.log).catch(console.error)\""
  },
  "dependencies": {
    "@codegenie/serverless-express": "^4.17.0",
    "@nestjs/common": "^11.1.8",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.1.8",
    "@nestjs/jwt": "^11.0.1",
    "@nestjs/mapped-types": "^2.1.0",
    "@nestjs/mongoose": "^10.1.0",
    "@nestjs/passport": "^11.0.5",
    "@nestjs/platform-express": "^11.1.8",
    "@nestjs/schedule": "^6.0.1",
    "@types/passport-google-oauth20": "^2.0.17",
    "@types/passport-jwt": "^4.0.1",
    "apple-signin-auth": "^2.0.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "cookie-parser": "^1.4.7",
    "cross-env": "^10.1.0",
    "dayjs": "^1.11.19",
    "env-cmd": "10",
    "firebase-admin": "^13.6.0",
    "google-auth-library": "^10.5.0",
    "joi": "^18.0.1",
    "korean-lunar-calendar": "^0.3.6",
    "luxon": "^3.7.2",
    "mongoose": "^8.10.0",
    "passport": "^0.7.0",
    "passport-google-oauth20": "^2.0.0",
    "passport-jwt": "^4.0.1",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.2"
  },
  "devDependencies": {
    "@nestjs/cli": "^11.0.10",
    "@nestjs/schematics": "^11.0.9",
    "@nestjs/testing": "^11.1.8",
    "@types/aws-lambda": "^8.10.157",
    "@types/cookie-parser": "^1.4.10",
    "@types/express": "^5.0.5",
    "@types/jest": "^30.0.0",
    "@types/luxon": "^3.7.1",
    "@types/node": "^24.9.2",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "esbuild": "^0.25.11",
    "eslint": "^9.39.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "jest": "^30.2.0",
    "prettier": "^3.6.2",
    "rimraf": "^6.1.2",
    "serverless": "^4.22.0",
    "serverless-offline": "^14.4.0",
    "source-map-support": "^0.5.21",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.5",
    "ts-loader": "^9.5.4",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.9.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
